@model Cuatro.MVCDemo.Models.VenueSearchModel

@{
    ViewBag.Title = "Venue Search";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/gps.js")" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        GetLocation();
    });
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchQuery)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SearchQuery)
            @Html.ValidationMessageFor(model => model.SearchQuery)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Near)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Near)
            @Html.ValidationMessageFor(model => model.Near)
        </div><br />
    
        <div class="editor-label">
            <a href="Javascript:GetLocation();" class="button">
            Locate Me
            </a>
        </div><br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Latitude)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Latitude)
            @Html.ValidationMessageFor(model => model.Latitude)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Longitude)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Longitude)
            @Html.ValidationMessageFor(model => model.Longitude)
        </div>

        <div>
            <input type="submit" value="Search" />
        </div>
}

@if(Model != null && Model.VenueResults != null) {
    Html.RenderPartial("VenueSearchResults", Model.VenueResults);
}